<?xml version="1.0" encoding="utf-8"?>
<manifest

    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.Senior_Proj_Fall_2015.Veterans_App_Employment">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21"/>

    <application
