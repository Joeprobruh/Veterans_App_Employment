<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/user_profile_creation_page">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Create a profile for other users and employers to see. Don&apos;t add any information you don&apos;t want to be seen by the public!!!"
                android:id="@+id/textView10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name"
                android:id="@+id/textView11"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/user_editText_name"
                android:textColor="#ff777777"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:hint="Name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Age"
                android:id="@+id/textView8"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/user_editText_age"
                android:textColor="#ff7a7a7a"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:hint="Age" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Address"
                android:id="@+id/textView9"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/user_editText_address"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:hint="Address" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sex:"
                android:textOff="Male"
                android:textOn="Female"
                android:id="@+id/user_switch_sex"
                android:enabled="true"
                android:showText="true"
                android:nestedScrollingEnabled="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:checked="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Military Credentials"
                android:id="@+id/textView12"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Branch..."
                android:id="@+id/button_branch"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rank..."
                android:id="@+id/button_rank"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Skills"
                android:id="@+id/textView13"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Skill"
                    android:id="@+id/skill_first"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentLeft="true"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Second Skill"
                    android:id="@+id/skill_second"
                    android:layout_marginStart="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/skill_first"
                    android:layout_alignLeft="@+id/skill_first"
                    android:layout_marginLeft="115dp"
                    android:layout_marginTop="20dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Third Skill"
                    android:id="@+id/skill_third"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="false"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fourth Skill"
                    android:id="@+id/skill_fourth"
                    android:layout_marginStart="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/skill_third"
                    android:layout_marginTop="20dp"
                    android:layout_alignLeft="@+id/skill_third"
                    android:layout_marginLeft="115dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fifth Skill"
                    android:id="@+id/skill_fifth"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sixth Skill"
                    android:id="@+id/skill_sixth"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/skill_fifth"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="115dp"
                    android:layout_alignLeft="@+id/skill_fifth"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Description"
                android:id="@+id/user_textView_description"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/user_editText_description"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="50dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:id="@+id/button_submit"
                    android:layout_marginLeft="20dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/button_cancel"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/button_submit"
                    android:layout_alignLeft="@+id/button_submit"
                    android:layout_marginLeft="120dp"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>